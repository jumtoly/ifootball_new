<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/register_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0f0f0"
              android:orientation="vertical">

    <com.ifootball.app.framework.widget.TitleBarView
        android:id="@+id/register_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="手机号码"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/register_telphone"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/register_code"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="6位数字"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/register_sendcodebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_redboder"
            android:padding="10dp"
            android:tag="60"
            android:text="获取验证码"
            android:textColor="@color/red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="设置密码"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6-20位密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="确认密码"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/register_repassword"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <CheckBox
            android:id="@+id/register_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:button="@mipmap/icon_checkbox"/>

        <TextView
            android:id="@+id/register_aggrment01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已认真阅读并同意"
            android:textColor="#969696"/>

        <TextView
            android:id="@+id/register_aggrment02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《i踢球用户协议》"
            android:textColor="#df4f4f"/>
    </LinearLayout>

    <TextView
        android:id="@+id/register_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/radius_redbg"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>