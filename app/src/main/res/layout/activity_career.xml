<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_career_head_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/career_head_bg_red"
        android:gravity="center_vertical">

        <com.ifootball.app.framework.widget.CircleImageView
            android:id="@+id/activity_career_head_circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/test_rostrum1"/>
        <TextView android:id="@+id/activity_career_head_name"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_below="@id/activity_career_head_circle"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="10dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:text="你好你好你好你好"
                  android:textColor="@color/white"
                  android:textSize="18sp"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/activity_career_head_name"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal"
                      android:weightSum="2">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:padding="2dp"
                      android:text="你好你好你"
                      android:textColor="@color/white"
                      android:textSize="14sp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="5dp"
                      android:background="@drawable/radius_whiteboder"
                      android:ellipsize="end"
                      android:gravity="center"
                      android:maxLines="1"
                      android:padding="2dp"
                      android:text="不好不好"
                      android:textColor="@color/white"
                      android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/activity_career_head_bottom_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:background="@color/career_head_bottom_bg_red"
                      android:orientation="horizontal"
                      android:weightSum="2">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="50dp"
                          android:layout_weight="1" android:gravity="center"
                          android:orientation="vertical"
                          android:padding="8dp"
                          android:weightSum="2">
                <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="23231"
                          android:textColor="@color/white"/>
                <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="发布"
                          android:textColor="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/activity_career_head_bottom_layout"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white_11transparent"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="50dp"
                          android:layout_weight="1" android:gravity="center"
                          android:orientation="vertical"
                          android:padding="8dp"
                          android:weightSum="2">
                <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="23231"
                          android:textColor="@color/white"/>
                <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="好友"
                          android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/activity_career_head_bottom_layout"
            android:background="@color/white_33transparent"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:layout_below="@id/activity_career_head_layout"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:paddingLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp" android:text="@string/career_describe"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:drawableLeft="@mipmap/ico_sign"
                  android:drawablePadding="5dp"
                  android:text="四川·成都"
                  android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/frm_navigation_bar"/>
    </LinearLayout>

</RelativeLayout>