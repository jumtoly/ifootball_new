<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/item_details_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/item_details_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_details_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_details_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="刘巍"
                android:textColor="@color/red"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_details_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="回复"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/item_details_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="刘巍"
                android:textColor="@color/red"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="2015.08.04"/>

        <TextView
            android:id="@+id/item_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_details_name_layout"
            android:layout_toRightOf="@id/item_details_icon"
            android:padding="5dp"
            android:text="5月8日黑脚队外战比赛照片，比分9:05月8日黑脚队外战比赛照片，比分9:0"/>
    </RelativeLayout>

</LinearLayout>